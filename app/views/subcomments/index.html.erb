<h1>Listing subcomments</h1>

<table>
  <thead>
    <tr>
      <th>Comment</th>
      <th>User</th>
      <th>Body</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @subcomments.each do |subcomment| %>
      <tr>
        <td><%= subcomment.comment_id %></td>
        <td><%= subcomment.user_id %></td>
        <td><%= subcomment.body %></td>
        <td><%= link_to 'Show', subcomment %></td>
        <td><%= link_to 'Edit', edit_subcomment_path(subcomment) %></td>
        <td><%= link_to 'Destroy', subcomment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

